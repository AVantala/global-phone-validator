{
  "name": "global-phone-validator",
  "version": "1.2.1",
  "description": "A reusable Node.js + TypeScript package for validating mobile phone numbers worldwide. Supports all countries with country-specific validation rules and mobile prefix detection for 50+ major countries. Handles international formats (+CC), 0-prefixed, and plain digits. Returns standardized E.164 format.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "ts-node test/validator.test.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "phone",
    "validator",
    "validation",
    "mobile",
    "mobile-phone",
    "international",
    "E164",
    "E.164",
    "country-code",
    "worldwide",
    "typescript"
  ],
  "author": "AVantala",
  "license": "MIT",
  "homepage": "https://github.com/AVantala/global-phone-validator#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AVantala/global-phone-validator.git"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "typescript": "^5.1.0",
    "ts-node": "^10.9.1"
  }
}
